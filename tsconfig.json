{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es6", "es2018", "dom"],
    "declaration": true,
    "declarationDir": ".",
    "emitDeclarationOnly": false,
    "outDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
